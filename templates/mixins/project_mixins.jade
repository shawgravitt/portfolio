mixin project(project)
	figure.project
		figcaption
			h3=project.title
			each cat, i in project.categories
				p= cat.name
		.peephole
			img(src=project._.heroImage.fit(700,700))
			.overlay
				a(href='/work/project/' + project.slug): button
					| View Project

mixin pagination(project)
	ul.pagination.wrapper
		if data.projects.previous
			li: a(href='?page=' + data.projects.previous): span.glyphicon.glyphicon-chevron-left previous
		else
			li.disabled: a(href='?page=' + 1): span.glyphicon.glyphicon-chevron-left 
		if data.projects.next
			li: a(href='?page=' + data.projects.next): | next
				span.glyphicon.glyphicon-chevron-right
		else
			li.disabled: a(href='?page=' + data.projects.totalPages): span.entypo.glyphicon.glyphicon-chevron-right 